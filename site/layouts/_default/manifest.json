{{- if .Site.Data.theme.favicon -}}
{
  "name": "{{.Site.Title}}",
  "icons": [
    {
      "src": "\{{.Site.Data.theme.favicon}}?nf_resize=fit&w=192&h=192",
      "sizes": "192x192",
      "type": "image\/png"
    },
    {
      "src": "\{{.Site.Data.theme.favicon}}?nf_resize=fit&w=512&h=512",
      "sizes": "512x512",
      "type": "image\/png"
    }
  ],
  "start_url": "/",
  "scope": ".",
  "theme_color": "#07023d",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#e2caa6"
}
{{- else -}}
{
  "name": "{{.Site.Title}}",
  "icons": [
    {
      "src": "\/favicons\/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image\/png"
    },
    {
      "src": "\/favicons\/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image\/png"
    }
  ],
  "start_url": "/",
  "theme_color": "#07023d",
  "scope": ".",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#03aeee"
}
{{end}}


